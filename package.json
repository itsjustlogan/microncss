{
  "name": "microncss",
  "version": "0.3.1",
  "description": "A fast, low configuration css utility library.",
  "main": "src/index.js",
  "bin": {
    "microncss": "src/index.js",
    "micron": "src/index.js"
  },
  "targets": {
    "main": false,
    "default": {
      "source": "src/scss/micron.scss",
      "distDir": "src/cdn"
    }
  },
  "scripts": {
    "build": "node src/index.js",
    "build:prod": "node src/index.js --build-prod",
    "watch": "node ./src/index.js --watch",
    "build:cdn": "rm -rf src/cdn && npx parcel build"
  },
  "keywords": [
    "css",
    "css utility",
    "sass",
    "microncss",
    "micron"
  ],
  "author": "Justin Logan",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.4.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "parcel": "^2.4.0",
    "vitepress": "^0.22.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjustlogan/microncss"
  },
  "bugs": {
    "url": "https://github.com/itsjustlogan/microncss/issues"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.4",
    "chalk": "^4.1.2",
    "cssnano": "^5.1.5",
    "postcss": "^8.4.12",
    "sass": "^1.49.9"
  }
}
